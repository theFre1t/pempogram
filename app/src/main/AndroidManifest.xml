<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tfre1t.example.pempogram">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pg_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pg_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".database.App">

        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.home.SelectFavoriteAudio"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.favoriteaudio.selectaudio" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".fragment.dashboard.addsound.Dashboard_Add_Sound"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.setsound.addsound" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>