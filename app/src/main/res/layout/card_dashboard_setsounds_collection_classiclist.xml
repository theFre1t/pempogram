<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <tfre1t.example.pempogram.customviewers.RoundedImageView
        android:id="@+id/imgAudiofile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/rounder_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvAudiofile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/view_text_name"
        android:textAppearance="@style/TextStylePrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tvAuthor"
        app:layout_constraintStart_toEndOf="@+id/imgAudiofile"
        app:layout_constraintTop_toTopOf="@+id/imgAudiofile" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_text_executor"
        android:textAppearance="@style/TextStyleSecondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgAudiofile"
        app:layout_constraintStart_toStartOf="@+id/tvAudiofile"
        app:layout_constraintTop_toBottomOf="@+id/tvAudiofile" />

    <ImageButton
        android:id="@+id/imgBtnPupupMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/colorTransparent"
        android:src="@drawable/baseline_more_vert_24"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>