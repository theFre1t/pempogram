<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

        <tfre1t.example.pempogram.CustomViewers.RoundedImageView
            android:id="@+id/imgCollection"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounder_4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvCollection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/view_text_name"
            android:textAppearance="@style/TextStylePrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tvAuthor"
            app:layout_constraintEnd_toStartOf="@+id/imgBtnAddStatus"
            app:layout_constraintStart_toEndOf="@+id/imgCollection"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35" />

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/view_text_author"
            android:textAppearance="@style/TextStyleSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgCollection"
            app:layout_constraintStart_toStartOf="@+id/tvCollection"
            app:layout_constraintTop_toBottomOf="@+id/tvCollection"
            app:layout_constraintVertical_bias="0.25" />

        <ImageView
            android:id="@+id/imgBtnAddStatus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_add_24"
            app:tint="@color/colorSecondary" />

</androidx.constraintlayout.widget.ConstraintLayout>