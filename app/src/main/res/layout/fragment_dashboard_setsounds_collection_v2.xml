<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgViewBackImage"
        android:layout_width="0dp"
        android:layout_height="275dp"
        android:alpha=".5"
        android:foregroundTintMode="multiply"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/vForeBackImgColl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/foreground_background_img_collection"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewBackImage"
        app:layout_constraintEnd_toEndOf="@+id/imgViewBackImage"
        app:layout_constraintStart_toStartOf="@+id/imgViewBackImage"
        app:layout_constraintTop_toTopOf="@+id/imgViewBackImage" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBtnAddSound"
        app:layout_constraintTop_toBottomOf="@+id/vForeBackImgColl" />

    <tfre1t.example.pempogram.roundedimageview.RoundedImageView
        android:id="@+id/imgViewFrontImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounder_4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewBackImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbSetSound"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/setsound_menu"></androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/vBackTextV"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/foreground_background_img_collection"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewBackImage"
        app:layout_constraintEnd_toEndOf="@+id/imgViewFrontImage"
        app:layout_constraintStart_toStartOf="@+id/imgViewFrontImage"
        app:layout_constraintTop_toBottomOf="@+id/imgViewFrontImage" />

    <TextView
        android:id="@+id/tvNameColl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textAlignment="center"
        android:textAppearance="@style/TextStylePrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/vBackTextV"
        app:layout_constraintStart_toStartOf="@+id/vBackTextV"
        app:layout_constraintTop_toBottomOf="@+id/imgViewFrontImage" />

    <TextView
        android:id="@+id/tvAuthorColl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textAlignment="center"
        android:textAppearance="@style/TextStyleSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tvNameColl"
        app:layout_constraintStart_toStartOf="@+id/tvNameColl"
        app:layout_constraintTop_toBottomOf="@+id/tvNameColl" />

    <ImageButton
        android:id="@+id/imgBtnAddSound"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:tint="@color/colorTextSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintStart_toStartOf="@+id/lvSetSounds"
        app:layout_constraintTop_toTopOf="@+id/divider"
        app:srcCompat="@drawable/baseline_playlist_add_black_36" />

    <ListView
        android:id="@+id/lvSetSounds"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnAddSound">

    </ListView>


</androidx.constraintlayout.widget.ConstraintLayout>