<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="colorControlNormal">@color/colorTextSecondary</item>
    </style>
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="BackgroundStyle" >
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="CardBackgroundStyle" >
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
    </style>
    <style name="TextStylePrimary" >
        <item name="fontFamily">@font/fira_sans</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    <style name="TextStyleSecondary" >
        <item name="fontFamily">@font/fira_sans</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>
    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="titleTextColor">@color/colorTextSecondary</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:maxHeight">56dp</item>
    </style>
</resources>